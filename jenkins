pipeline {
    agent any

    environment {
        NODE_ENV = 'development'
    }

    tools {
        nodejs 'rup_node'
    }

    stages {
        stage('Checkout Repository') {
            steps {
                echo 'ğŸ“¦ Cloning the GitHub repository...'
                git branch: 'main', url: 'https://github.com/rupeena0805/jenkins-frontend.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¥ Installing npm dependencies...'
                powershell 'npm install'
            }
        }

        stage('Deploy') {
            steps {
                echo 'ğŸš€ Starting the development server...'
                powershell 'npm start'
            }
        }
    }

    post {
        success {
            echo 'âœ… Frontend deployed successfully!'
        }
        failure {
            echo 'âŒ Deployment failed. Please check logs for details.'
        }
    }
}
